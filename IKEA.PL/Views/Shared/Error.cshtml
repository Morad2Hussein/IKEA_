@using IKEA.PL.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="mb-4">
                <i class="fas fa-exclamation-circle fa-7x text-danger animate__animated animate__pulse animate__infinite"></i>
            </div>

            <h1 class="display-4 fw-bold text-dark mb-3">Something Went Wrong!</h1>
            <p class="lead text-secondary mb-5">
                We apologize for the inconvenience. An unexpected error occurred while processing your request.
                Our technical team has been notified.
            </p>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 shadow-sm">
                    <i class="fas fa-home me-2"></i>Return to Dashboard
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg px-5">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>

            <hr class="my-5 opacity-25" />

            <div class="text-start p-4 rounded-3 border-start border-4 border-warning bg-light">
                <h5 class="text-warning fw-bold"><i class="fas fa-tools me-2"></i>Developer Information</h5>
                <p class="small text-muted mb-0">
                    If you are the developer, you can see detailed exception information by switching to the
                    <strong class="text-dark">Development environment</strong>.
                    Ensure this is disabled in production to protect sensitive data.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}

