@model string
@{
    // This automatically gets the name of the current controller (Employee, Department, etc.)
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<a asp-action="Details" asp-controller="@currentController" asp-route-id="@Model" class="btn btn-outline-primary btn-sm">
    <i class="fas fa-eye"></i> Details
</a>

<a asp-action="Edit" asp-controller="@currentController" asp-route-id="@Model" class="btn btn-outline-warning btn-sm">
    <i class="fas fa-edit"></i> Edit
</a>