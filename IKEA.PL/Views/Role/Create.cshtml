@model RoleViewModels
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted">Roles</a></li>
                    <li class="breadcrumb-item active fw-bold" aria-current="page">Create New</li>
                </ol>
            </nav>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
                            <i class="fas fa-plus-square fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 fw-bold">Create Role</h2>
                            <p class="text-muted small mb-0">Define a new access level for your users.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form method="post" asp-controller="Role" asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small border-0 shadow-sm mb-4" role="alert"></div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold text-secondary small" asp-for="Name">ROLE NAME</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-tag text-muted"></i>
                                </span>
                                <input asp-for="Name" class="form-control border-start-0 ps-0 border-focus-primary" placeholder="Enter role name (e.g. Admin)" autofocus />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <hr class="text-muted opacity-25 my-4" />

                        <div class="d-flex align-items-center gap-2">
                            <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm flex-grow-1">
                                <i class="fas fa-check-circle me-1"></i> Save Role
                            </button>
                            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fas fa-info-circle me-1 text-primary"></i>
                    Roles help you manage permissions efficiently across your organization.
                </p>
            </div>

        </div>
    </div>
</div>

