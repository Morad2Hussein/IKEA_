@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    @* Using your .main-card class *@
    <div class="main-card animate__animated animate__fadeIn" style="max-width: 450px; width: 100%;">

        @* Using your .card-header-custom class *@
        <div class="card-header-custom text-center">
            <h5 class="m-0 text-white">
                <i class="fas fa-user-shield me-2 text-primary"></i> Create New Password
            </h5>
        </div>

        <div class="content-body p-4">
            <p class="text-muted small text-center mb-4">
                Please enter and confirm your new secure password below.
            </p>

            <form asp-action="ResetPassword" method="post">
                @* Exact validation logic kept *@
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                @* Exact hidden fields kept *@
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                @* New Password Field *@
                <div class="form-group mb-3">
                    <label class="form-label text-muted small fw-bold" asp-for="NewPassword">NEW PASSWORD</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-dark border-0 text-primary">
                            <i class="fas fa-lock"></i>
                        </span>
                        @* text-dark ensures the new password typed is black *@
                        <input asp-for="NewPassword" type="password" class="form-control border-0 text-dark fw-bold"
                               style="background: rgba(255,255,255,0.95);" placeholder="••••••••">
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                @* Confirm Password Field *@
                <div class="form-group mb-4">
                    <label class="form-label text-muted small fw-bold" asp-for="ConfirmPassword">CONFIRM PASSWORD</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-dark border-0 text-primary">
                            <i class="fas fa-check-double"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control border-0 text-dark fw-bold"
                               style="background: rgba(255,255,255,0.95);" placeholder="••••••••">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                @* Submit Button *@
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    UPDATE PASSWORD <i class="fas fa-save ms-2"></i>
                </button>
            </form>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    Remember your password?
                    <a asp-action="Login" asp-controller="Account" class="text-primary fw-bold text-decoration-none">Back to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

