@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    @* Using your .main-card class for the glass effect *@
    <div class="main-card animate__animated animate__fadeIn" style="max-width: 450px; width: 100%;">

        @* Using your .card-header-custom class *@
        <div class="card-header-custom">
            <h5 class="m-0 text-white">
                <i class="fas fa-key me-2 text-primary"></i> Reset Password
            </h5>
            <a asp-action="Login" class="btn btn-outline-light btn-sm border-0">
                <i class="fas fa-times"></i>
            </a>
        </div>

        <div class="content-body p-4">
            <p class="text-muted small text-center mb-4">
                Enter your email address and we’ll send you a link to reset your password.
            </p>

            <form asp-action="SendResetPasswordUrl" asp-controller="Account" method="post">
                @* Exact same validation summary logic *@
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <div class="form-group mb-4">
                    <label class="form-label text-muted small fw-bold" asp-for="Email">EMAIL ADDRESS</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-dark border-0 text-primary">
                            <i class="fas fa-envelope"></i>
                        </span>
                        @* text-dark ensures black text for professional contrast *@
                        <input asp-for="Email" class="form-control border-0 text-dark fw-bold"
                               style="background: rgba(255,255,255,0.95);" placeholder="example@mail.com">
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                @* Exact same submit button logic *@
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    SEND RESET LINK <i class="fas fa-paper-plane ms-2"></i>
                </button>
            </form>

            <div class="text-center mt-4 pt-3 border-top border-secondary border-opacity-10">
                <p class="text-muted small mb-0">
                    Remember your password?
                    <a asp-action="Login" class="text-primary fw-bold text-decoration-none ms-1">Back to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

