@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="main-card animate__animated animate__fadeIn">
    <div class="card-header-custom d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-white">
            <i class="fas fa-user-edit me-2 text-primary"></i> Edit User: @Model.FirstName @Model.LastName
        </h5>
        <a asp-controller="User" asp-action="Index" class="btn btn-outline-light btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to list
        </a>
    </div>

    <div class="content-body">
        <div class="row justify-content-center">
            <div class="col-md-8 py-4">
                <form method="post" asp-controller="User" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm mb-4"></div>

                    @* Hidden field for ID is important *@
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="form-group mb-3 col-12">
                            <label class="form-label text-muted small fw-bold" asp-for="Email"></label>
                            <input asp-for="Email" class="form-control bg-light text-dark shadow-sm border-0 py-2" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3 col-md-6">
                            <label class="form-label text-muted small fw-bold" asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control bg-light text-dark shadow-sm border-0 py-2" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3 col-md-6">
                            <label class="form-label text-muted small fw-bold" asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control bg-light text-dark shadow-sm border-0 py-2" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4 text-muted" />

                    @* --- Role Management Section --- *@
                    <div class="roles-section">
                        <h6 class="text-primary fw-bold mb-3"><i class="fas fa-user-shield me-2"></i>Manage User Roles</h6>
                        <div class="row px-2">
                            @for (int i = 0; i < Model.UserRoles.Count; i++)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check p-2 border rounded bg-light shadow-sm">
                                        @* Hidden inputs to maintain data integrity *@
                                        <input type="hidden" asp-for="@Model.UserRoles[i].UserId" />
                                        <input type="hidden" asp-for="@Model.UserRoles[i].UserName" />

                                        <input asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input ms-0 me-2" />
                                        <label class="form-check-label text-dark fw-semibold" asp-for="@Model.UserRoles[i].IsSelected">
                                            @Model.UserRoles[i].UserName
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    @* ------------------------------- *@

                    <div class="mt-4 pt-3 border-top d-flex gap-2">
                        <button type="submit" class="btn btn-success px-4 shadow-sm">
                            <i class="fas fa-save me-1"></i> Save Changes
                        </button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>