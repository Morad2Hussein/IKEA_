@model UserViewModel
@{
    ViewData["Title"] = "User Profile Details";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">User Profile</h2>
            <p class="text-muted">Detailed information for user: @Model.Email</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit Profile
            </a>
        </div>
    </div>

    <ul class="nav nav-tabs custom-tabs" id="userTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">
                General Information
            </button>
        </li>
    </ul>

    <div class="tab-content shadow-sm border border-top-0 rounded-bottom bg-white" id="myTabContent">
        <div class="tab-pane fade show active p-5" id="general" role="tabpanel">
            
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="small text-uppercase fw-bold text-muted mb-1" asp-for="Id"></label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.Id</p>
                </div>
                
                <div class="col-md-6">
                    <label class="small text-uppercase fw-bold text-muted mb-1" asp-for="Email"></label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.Email</p>
                </div>

                <div class="col-md-6">
                    <label class="small text-uppercase fw-bold text-muted mb-1" asp-for="FirstName"></label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.FirstName</p>
                </div>

                <div class="col-md-6">
                    <label class="small text-uppercase fw-bold text-muted mb-1" asp-for="LastName"></label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.LastName</p>
                </div>
            </div>

        </div>
    </div>
</div>

