@model IEnumerable<DepartmentDto>

<div class="main-card">
    <div class="card-header-custom d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-white">
            <i class="fas fa-building me-2 text-primary"></i> Department Management
        </h5>
        <a class="btn btn-primary btn-sm shadow-sm" asp-controller="Department" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Create Department
        </a>
    </div>

    <div class="content-body">
        <div class="row justify-content-center my-4">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="input-group shadow-sm">
                    <span class="input-group-text bg-dark border-0 text-muted">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" name="DepartmentSearchName" class="form-control bg-dark text-white border-0"
                           placeholder="Search by department name..." />
                    <button type="submit" class="btn btn-primary px-4">Search</button>
                </form>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-container">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Code</th>
                            <th>Department Name</th>
                            <th>Description</th>
                            <th>Created Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                                        @dept.Code
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@dept.Name</div>
                                </td>
                                <td class="text-muted small">
                                    @(dept.Description?.Length > 50 ? dept.Description.Substring(0, 50) + "..." : dept.Description)
                                </td>
                                <td>
                                    <div class="text-muted small">
                                        <i class="far fa-calendar-alt me-1"></i> @dept.DateOfCreation.ToString("MMM dd, yyyy")
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        @* Details/Edit Buttons *@
                                        <partial name="_ButtonsPartialView" model="dept.Id.ToString()" />

                                        @* Delete Button *@
                                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@dept.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <div class="modal fade" id="DeleteModal-@dept.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content bg-dark border-secondary">
                                                <div class="modal-header border-0">
                                                    <h5 class="modal-title text-danger fw-bold">Confirm Deletion</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-start text-white">
                                                    Are you sure you want to delete the department: <strong class="text-primary">@dept.Name</strong>?
                                                    <p class="text-muted small mt-2"><i class="fas fa-exclamation-triangle me-1"></i> Deleting this may affect employees assigned to it.</p>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <form asp-action="Delete" asp-controller="Department" asp-route-id="@dept.Id" method="post">
                                                        <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger px-4">Delete Now</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No departments found</h5>
            </div>
        }
    </div>
</div>
