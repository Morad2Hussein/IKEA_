@using Demo.BLL.ViewModels
@model DepartmentViewModel


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>

    <form class="col-8"  method="post" asp-controller="Department" asp-action="Create" >
        <div asp-validation-summary="ModelOnly"></div>
        <partial name="PartialView\_CreateOrEditPartialView" model="Model" />
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to List</a>

        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}