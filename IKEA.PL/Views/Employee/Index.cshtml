@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employee Management";

}

<div class="main-card">
    <div class="card-header-custom d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-white">
            <i class="fas fa-users-cog me-2 text-primary"></i> Employee Management
        </h5>
        <a class="btn btn-primary btn-sm shadow-sm" asp-controller="Employee" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Create Employee
        </a>
    </div>

    <div class="content-body">
        <div class="row justify-content-center my-4">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="input-group shadow-sm">
                    <span class="input-group-text bg-dark border-0 text-muted">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" name="EmployeeSearchName" class="form-control bg-dark text-white border-0"
                           placeholder="Search by name..." />
                    <button type="submit" class="btn btn-primary px-4">Search</button>
                </form>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-container">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Profile</th>
                            <th>Name</th>
                            <th>Email Address</th>
                            <th>Type</th>
                            <th>Department</th>
                            <th>Salary</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="~/files/images/@(emp.PhotoName ?? "user.jpg")"
                                         class="rounded-circle border border-2 border-primary border-opacity-25"
                                         width="40" height="40" style="object-fit: cover;" />
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@emp.Name</div>
                                </td>
                                <td class="text-muted small">@emp.Email</td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                                        @emp.EmployeeTypes
                                    </span>
                                </td>
                                <td><i class="fas fa-sitemap me-1 text-muted small"></i> @emp.Department</td>
                                <td class="fw-bold text-success">$@emp.Salary.ToString("N0")</td>
                                <td class="text-center">
                                    @if (emp.IsActive)
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        @* Details/Edit Buttons *@
                                        <partial name="_ButtonsPartialView" model="emp.Id.ToString()" />

                                        @* Delete Button *@
                                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@emp.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <div class="modal fade" id="DeleteModal-@emp.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content bg-dark border-secondary">
                                                <div class="modal-header border-0">
                                                    <h5 class="modal-title text-danger fw-bold">Confirm Deletion</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-start text-white">
                                                    Are you sure you want to delete employee: <strong class="text-primary">@emp.Name</strong>?
                                                    <p class="text-muted small mt-2"><i class="fas fa-info-circle me-1"></i> This action cannot be undone.</p>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <form asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id" method="post">
                                                        <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger px-4">Delete Now</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No employees found</h5>
            </div>
        }
    </div>
</div>