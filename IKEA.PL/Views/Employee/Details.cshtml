@model EmployeeDetailsDTO
@{
    ViewData["Title"] = "Employee Details";
}

<div class="main-card animate__animated animate__fadeIn">
    @* Header: Matching your Index style with Button on the right *@
    <div class="card-header-custom d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-white">
            <i class="fas fa-user-circle me-2 text-primary"></i> Employee Profile
        </h5>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm shadow-sm">
                <i class="fas fa-user-edit me-1"></i> Edit Profile
            </a>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-chevron-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="content-body">
        @* Profile Overview Section *@
        <div class="row align-items-center mb-5 p-3">
            <div class="col-auto">
                <img class="rounded-circle border border-4 border-primary border-opacity-25 shadow-sm"
                     width="110" height="110" style="object-fit: cover;"
                     src="~/files/images/@(string.IsNullOrEmpty(Model.PhotoName) ? "user.jpg" : Model.PhotoName)"
                     alt="Employee Photo" />
            </div>
            <div class="col">
                <h2 class="text-dark fw-bold mb-1">@Model.Name</h2>
                <p class="text-muted mb-2">
                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">@Model.EmployeeTypes</span>
                    <span class="ms-2"><i class="fas fa-building me-1"></i> @Model.Department</span>
                </p>
                <div class="d-flex gap-4">
                    <span class="small text-muted"><i class="fas fa-envelope me-1 text-primary"></i> @Model.Email</span>
                    <span class="small text-muted"><i class="fas fa-phone-alt me-1 text-primary"></i> @Model.PhoneNumber</span>
                </div>
            </div>
            <div class="col-auto text-end">
                @if (Model.IsActive)
                {
                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-4 py-2">
                        <i class="fas fa-check-circle me-1"></i> ACTIVE
                    </span>
                }
                else
                {
                    <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-4 py-2">
                        <i class="fas fa-times-circle me-1"></i> INACTIVE
                    </span>
                }
            </div>
        </div>

        @* Details Grid *@
        <div class="row g-4 px-2">
            @* Column 1 *@
            <div class="col-md-4">
                <div class="p-3 rounded bg-light border border-opacity-10 h-100">
                    <h6 class="text-primary text-uppercase small fw-bold mb-3 border-bottom pb-2">Personal Info</h6>

                    <div class="mb-3">
                        <label class="text-muted x-small d-block">Full Address</label>
                        <span class="text-dark fw-medium">@Model.Address</span>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted x-small d-block">Age / Gender</label>
                        <span class="text-dark fw-medium">@Model.Age Years / @Model.Gender</span>
                    </div>
                </div>
            </div>

            @* Column 2 *@
            <div class="col-md-4">
                <div class="p-3 rounded bg-light border border-opacity-10 h-100">
                    <h6 class="text-primary text-uppercase small fw-bold mb-3 border-bottom pb-2">Employment Details</h6>

                    <div class="mb-3">
                        <label class="text-muted x-small d-block">Hiring Date</label>
                        <span class="text-dark fw-medium">@Model.HiringDate.ToString("dd MMMM yyyy")</span>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted x-small d-block">Monthly Salary</label>
                        <span class="text-success fw-bold fs-5">@Model.Salary.ToString("C0")</span>
                    </div>
                </div>
            </div>

            @* Column 3 *@
            <div class="col-md-4">
                <div class="p-3 rounded bg-light border border-opacity-10 h-100">
                    <h6 class="text-primary text-uppercase small fw-bold mb-3 border-bottom pb-2">System Audit</h6>

                    <div class="mb-2">
                        <label class="text-muted x-small d-block">Created By</label>
                        <span class="text-dark small">@Model.CreatedBy</span>
                        <div class="x-small text-muted">@Model.CreatedOn.ToString("g")</div>
                    </div>

                    <div class="mb-0">
                        <label class="text-muted x-small d-block">Last Modified</label>
                        <span class="text-dark small">@Model.ModifiedBy</span>
                        <div class="x-small text-muted">@Model.ModifiedOn.ToString("g")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .bg-light {
        background-color: rgba(0, 0, 0, 0.03) !important;
    }
</style>